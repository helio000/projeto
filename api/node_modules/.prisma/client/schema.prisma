generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Aluno {
  id          Int         @id @default(autoincrement())
  nome        String
  email       String      @unique
  telefone    String
  datanasc    DateTime?   @db.DateTime(6) // Corrigido para não exceder precisão máxima
  arteMarcial String
  RA          Int         @unique
  Matricula   Matricula[]
}

model Matricula {
  id            Int       @id @default(autoincrement())
  alunoId       Int
  turmaId       Int
  dataMatricula DateTime? @default(now()) @db.DateTime(6) // Corrigido também para precisão correta
  aluno         Aluno     @relation(fields: [alunoId], references: [id])
  turma         Turma     @relation(fields: [turmaId], references: [id])
}

model Professor {
  id          Int     @id @default(autoincrement())
  nome        String
  cpf         String  @unique
  email       String  @unique
  telefone    String?
  arteMarcial String?
  Turma       Turma[]
}

model Turma {
  id          Int         @id @default(autoincrement())
  nome        String
  arteMarcial String?
  professorId Int?
  professor   Professor?  @relation(fields: [professorId], references: [id])
  Matricula   Matricula[]
}
