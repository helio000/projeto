generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Aluno {
  id             Int         @id @default(autoincrement())
  nome           String
  email          String      @unique
  telefone       String
  datanasc       DateTime
  arteMarcial    String
  RA             Int
  notaTecnica    Float?
  notaDisciplina Float?
  frequencia     Float?

  matriculas     Matricula[]  // relação 1:N com Matricula
}

model Matricula {
  id            Int      @id @default(autoincrement())
  alunoId       Int
  turmaId       Int
  dataMatricula DateTime? @default(now())

  aluno         Aluno    @relation(fields: [alunoId], references: [id])
  turma         Turma    @relation(fields: [turmaId], references: [id])
}

model Professor {
  id          Int      @id @default(autoincrement())
  nome        String
  cpf         String   @unique
  email       String   @unique
  telefone    String?
  arteMarcial String?
  datanasc    DateTime?

  turmas      Turma[]   // relação 1:N com Turma
}

model Turma {
  id          Int        @id @default(autoincrement())
  nome        String
  arteMarcial String?
  professorId Int?
  professor   Professor? @relation(fields: [professorId], references: [id])

  matriculas  Matricula[] // relação 1:N com Matricula
}
